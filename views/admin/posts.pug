extends ../cpanel

block content
    div(class=" row justify-content-center align-items-center pt-3")
        .card.p-4  
            .card-body
                a(href="/cpanel/posts/add",class="btn btn-primary btn-lg ") Add New Post
    div(class="row justify-content-center align-items-center")
        table.table
            thead
                th title
                th picture
                th(style="overflow:hidde;") body
                th DateTime
                th Actions
            tbody
                each n in news
                    tr                 
                        td=n.title
                        td
                            img(width='150',src=n.img)
                        td=n.body
                        td=n.datetime    
                        td 
                            a(href=`/cpanel/posts/delete/${n._id}`,class='btn btn-danger') Delete
                            a(href=`/cpanel/posts/update/${n._id}`,class="btn btn-warning") Update 
            
