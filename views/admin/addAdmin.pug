extends ../cpanel

block content
    div(class="row justify-content-center align-items-center",id="register-body")
        form(class="form",action="/cpanel/addadmin",method="post",id="login-form")
            div(align="center")
                h3 Register Admin
            .form-group
                label(for="username",class="text-info") Username:
                br
                input(type="text",name="username",id="username",class="form-control",placeholder="Username")
            .form-group
                label(for="email",class="text-info") Email:
                br
                input(type="text",name="email",id="email",class="form-control",placeholder="Email")
            .form-group
                label(for="password",class="text-info") Password:
                br
                input(type="password",name="password",id="password",class="form-control",placeholder="Password")
            .form-group
                input(type="submit",name="submit",class="btn btn-info form-control", Value="Register")
            
